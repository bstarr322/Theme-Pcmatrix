{% if template contains 'product' %}
<div id="followprice-container">
  <div id="followprice-widget" class="fp-button" data-store-key="$2a$07$o4gIWjn3EVn/Hhh2oSuY7Oq.ofdBUVlZKsyP57AXjg4uY/3YwyW8e" data-type="single" data-product-title="{{product.title | escape}}" data-product-id="{{product.selected_or_first_available_variant.id | escape}}" data-product-url="{{shop.url | url_param_escape }}{{ product.url | url_escape}}{{'?variant='}}{{product.selected_or_first_available_variant.id}}" data-product-image="{{ featured_image | img_url: '1024x1024' | prepend: 'https:'}}" data-product-price="{{product.selected_or_first_available_variant.price | money_without_currency }}" data-product-currency="{{shop.currency | escape}}" data-product-availability ="{% if product.available %}1{% else %}0{% endif %}" data-product-stock="{{ product.variants.first.inventory_quantity }}" data-product-manufacture="{{product.vendor | escape}}" data-product-subcategory="{{ product.type | escape }}"></div>
</div>

<style>
  #followprice-container {
  }
  #followprice-widget {
    margin-right: 0px;
    margin-left: 0px;
    margin-bottom: 0px;
    margin-top: 0px;
  }
  
  .fp-btn,
  .fp-followed .fp-btn {
    background-color: #fff;
  }
  
  .fp-followed .fp-follow-logo img {
    display: none !important;
  }
  
  .fp-followed .fp-btn .fp-btn-text {
    color: #333;
    display: flex;
    align-items: center;
    font-weight: bold;
  }
  .fp-followed .fp-btn .fp-btn-text * {
    display: none;
  }
  
  .fp-btn-text:after {
    content: 'Price Alert';
  }
  
  span.fp-unfollowed-text.fp-btn-text:before {
    content: '';
    display: inline-block;
    width: 20px;
    height: 20px;
    background-image: url(background-image: url(data:image/svg+xml;utf8;base64,));
    background-size: contain;
  }
  
  span.fp-followed-text.fp-btn-text:before {
    content: '';
    display: inline-block;
    width: 20px;
    height: 20px;
    background-image: url(data:image/svg+xml;utf8;base64,);
    background-size: contain;
  }
  
  .fp-count {
    margin-left: 1px;
  }
</style>

{% endif %}